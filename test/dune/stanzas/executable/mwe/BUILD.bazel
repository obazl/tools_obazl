load("@rules_ocaml//build:rules.bzl",
     "ocaml_binary",
     "ocaml_module",
)

MAIN_DEPS = ["mwe"]

##############################
####  Executable Targets  ####
#############
ocaml_binary(
    name    = "mwe",
    visibility = ["//visibility:public"],
    exe     = "main",
    manifest = [":Main"]

)

#############################
####  Singleton Targets  ####

ocaml_module(
    name          = "Main",
    struct        = "main.ml",
    deps          = MAIN_DEPS,
)

