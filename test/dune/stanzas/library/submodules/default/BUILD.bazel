load("@rules_ocaml//build:rules.bzl",
     "ocaml_ns_archive",
     "ocaml_module",
)

LIB_B_DEPS = ["foo", "bar"]

LIB_B_OPTS = ["-open", "foo", "-open", "bar", "-linkall"]

#############################
####  Aggregate Targets  ####

#################
ocaml_ns_archive(
    name       = "lib-b",
    submodules = ["E", "B", "A", "D", "C"],
    opts       = ["-linkall"],
)

#############################
####  Singleton Targets  ####

ocaml_module(
    name        = "A",
    struct      = "a.ml",
    sig         = "a.mli",
    opts        = LIB_B_OPTS,
    deps        = LIB_B_DEPS,
)

ocaml_module(
    name        = "B",
    struct      = "b.ml",
    sig         = "b.mli",
    opts        = LIB_B_OPTS,
    deps        = LIB_B_DEPS,
)

ocaml_module(
    name        = "E",
    struct      = "e.ml",
    sig         = "e.mli",
    opts        = LIB_B_OPTS,
    deps        = LIB_B_DEPS,
)

ocaml_module(
    name          = "C",
    struct        = "c.ml",
    opts          = LIB_B_OPTS,
    deps          = LIB_B_DEPS,
)

ocaml_module(
    name          = "D",
    struct        = "d.ml",
    opts          = LIB_B_OPTS,
    deps          = LIB_B_DEPS,
)

