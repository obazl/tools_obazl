load("@rules_ocaml//build:rules.bzl",
     "ocaml_library",
     "ocaml_ns_resolver",
     "ocaml_module",
)

LIB_A_DEPS = ["foo", "bar"]

LIB_A_OPTS = ["-open", "foo", "-open", "bar", "-linkall"]

#############################
####  Aggregate Targets  ####

##############
ocaml_library(
    name    = "lib-a",
    submodules = ["D", "A", "Gen", "C"],
)

#############################
####  Singleton Targets  ####

ocaml_module(
    name        = "A",
    struct      = "a.ml",
    sig         = "a.mli",
    opts        = LIB_A_OPTS,
    deps        = LIB_A_DEPS,
)

ocaml_module(
    name        = "D",
    struct      = "d.ml",
    sig         = "d.mli",
    opts        = LIB_A_OPTS,
    deps        = LIB_A_DEPS,
)

)

ocaml_module(
    name          = "C",
    struct        = "c.ml",
    opts          = LIB_A_OPTS,
    deps          = LIB_A_DEPS,
)

ocaml_module(
    name          = "Gen",
    struct        = "gen.ml",
    opts          = LIB_A_OPTS,
    deps          = LIB_A_DEPS,
)

