genrule(
    name = "mkhdrs",
    srcs = [
        "obazl_watch.c",
        "obazl_watch_lua.c",
        "obazl_watch_client.c",
        "obazl_watch_config.c",
        "daemonize.c",
        "//src/lib/obazl_config:obazl_config.c",
        "//src/lib/obazl_codept:obazl_codept.c",
        "//src/lib/obazl_codept:obazl_codept_lua.c",
