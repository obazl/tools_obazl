    linkopts = [
        "-L/usr/local/lib",     # FIXME
        "-llua",
    ] + select({
        "//bzl/host:linux": [],
        "//bzl/host:macos": ["-framework", "CoreServices"], # for fswatch
    }),
    visibility = ["//visibility:public"]
)

