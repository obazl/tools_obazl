        "-I", "external/tools_obazl/vendored/logc",

        "-I", "external/uthash/include",
    ],
    deps = [
        "//src/lib/obazl_config",
        "//src/lib/obazl_codept",
        "//src/lib/obazl_dune",
        "//src/lib/obazl_fs",
        "//src/lib/obazl_lua",
        "//src/lib/obazl_opam",
        # "//src/lib/obazl_starlark", # FIXME
        "//external/fswatch",
        "//external/lua/lib:lua",
        "//vendored/logc"
